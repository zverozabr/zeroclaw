{
  "schema_version": "zeroclaw.ghcr-tag-policy.v1",
  "release_tag_regex": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
  "sha_tag_prefix": "sha-",
  "sha_tag_length": 12,
  "latest_tag": "latest",
  "require_latest_on_release": true,
  "immutable_tag_classes": [
    "release",
    "sha"
  ],
  "rollback_priority": [
    "sha",
    "release"
  ],
  "contract_artifact_retention_days": 21,
  "scan_artifact_retention_days": 14
}
